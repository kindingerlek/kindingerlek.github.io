---
import mainSectionData from '@/data/sections/main-section.data'
import LinkButton from '../LinkButton.astro'
---

<footer class='mx-auto mt-24 w-full'>
	<div class='border-t border-border pt-5'>
		<div
			class='flex flex-col items-center gap-y-3 sm:flex sm:flex-row sm:items-center sm:justify-between sm:gap-y-0'
		>
			<div class='flex gap-x-4 text-sm'>
				<p class=''>Â© {new Date().getFullYear()}. All rights reserved.</p>
			</div>

			<div class='flex items-center justify-between'>
				<!-- Social Brands -->
				<div class='flex items-center gap-x-2'>
					{
						mainSectionData.links.map((link) => (
							<LinkButton
								name=''
								icon={link.icon}
								iconSize={12}
								url={link.url}
								class:list={[
									'inline-block h-4 w-4 text-muted-foreground transition-all hover:text-muted-foreground/75'
								]}
							/>
						))
					}
				</div>
				<!-- End Social Brands -->
			</div>
		</div>
	</div>
</footer>
