---
import type { SkillSet } from '@/components/sections/Skills/SkillsSection.types'
import Tag from './Tag.astro'

interface Props extends SkillSet {}

const { title, skills } = Astro.props
---

<div class='mt-2 flex flex-col gap-y-2 md:flex-row md:gap-x-5 md:gap-y-0'>
	<h3 class='w-1/5 font-medium'>{title}</h3>
	<div class='flex w-4/5 flex-row flex-wrap gap-x-4 gap-y-2'>
		{skills.map((skill) => <Tag {...skill} />)}
	</div>
</div>
