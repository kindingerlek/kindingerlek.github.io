---
import ImageSrc from '@/components/ImageSrc.astro'
import type { Photo as PhotoType } from '@/components/sections/shared'

interface Props {
	src?: PhotoType
	alt: string
	size: 'large' | 'small'
}

const { src, alt, size } = Astro.props

const sizeToClass = {
	large: 'h-18 w-18',
	small: 'h-12 w-12'
}
---

{
	src && (
		<ImageSrc
			src={src}
			alt={alt}
			class:list={['hidden rounded-md sm:block', sizeToClass[size]]}
			width={104}
			height={104}
		/>
	)
}
